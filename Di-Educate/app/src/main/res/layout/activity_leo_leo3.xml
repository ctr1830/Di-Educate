<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leo_leo3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eus.ehu.tta.intel.di_educate.LeoLeo3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:id="@+id/l_enunciado" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_enunciado"
        android:layout_centerHorizontal="true"
        android:id="@+id/palabra"
        android:textSize="18sp" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/palabra"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/bl31"
        android:onClick="respuesta"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bl31"
        android:layout_alignLeft="@+id/bl31"
        android:layout_alignStart="@+id/bl31"
        android:id="@+id/bl32"
        android:onClick="respuesta"/>

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bl32"
        android:layout_alignLeft="@+id/bl32"
        android:layout_alignStart="@+id/bl32"
        android:id="@+id/bl33"
        android:onClick="respuesta"/>

    <Button
        android:text="@string/bcomprobar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/button16"
        android:layout_below="@+id/bl33"
        android:layout_centerHorizontal="true"
        android:onClick="comprobar3"/>
</RelativeLayout>
